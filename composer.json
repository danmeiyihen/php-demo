{
  "name": "khs1994/example",
  "description": "Create PHP Project By Composer",
  "keywords": [
    "php_project",
    "sdk",
    "api"
  ],
  "homepage": "https://github.com/khs1994-php/example",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "khs1994",
      "email": "khs1994@khs1994.com",
      "homepage": "https://khs1994.com"
    }
  ],
  "support": {
    "issues": "https://github.com/khs1994-php/example/issues"
  },
  "require": {
    "php": ">=7.1",
    "ext-json": "*"
  },
  "require-dev": {
    "ext-PDO": "*",
    "phpunit/phpunit": "^7.0"
  },
  "config": {
    "platform": {
      "php": "7.1.0"
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "suggest": {
    "ext-xdebug": "*"
  },
  "autoload": {
    "psr-4": {
      "DirName\\": "src/DirName/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DirName\\Tests\\": "tests/DirName/"
    }
  },
  "scripts": {
    "z-test": [
      "vendor/bin/phpunit"
    ],
    "z-chinese-mirror": [
      "@php -r \"echo PHP_EOL.PHP_EOL.'$ composer config -g repo.packagist composer https://packagist.phpcomposer.com'.PHP_EOL.PHP_EOL.PHP_EOL;\""
    ],
    "z-docker-mirror": [
      "@php -r \"echo PHP_EOL.PHP_EOL.'$ { \"registry-mirrors\": [ \"https://registry.docker-cn.com\" ] }'.PHP_EOL.PHP_EOL.PHP_EOL;\""
    ],
    "z-example": [
      "cp README.example.md README.md",
      "cp .gitattributes.example .gitattributes"
    ],
    "z-travis": [
      "travis encrypt-file ~/.ssh/id_rsa --add"
    ],
    "z-encrypt": [
      "echo \"\\n\\n$ openssl enc -aes-128-cbc -e -a -in FILE_PATH -out OUT_FILE_PATH -K c286696d887c9aa0611bbb3e2025a400 -iv 562e17996d093d28ddb3ba695a2e6f00\\n\\n\"",
      "echo \"\\n\\n$ openssl enc -aes-128-cbc -d -a -in FILE_PATH -out OUT_FILE_PATH -K c286696d887c9aa0611bbb3e2025a400 -iv 562e17996d093d28ddb3ba695a2e6f00\\n\\n\""
    ]
  },
  "scripts-descriptions": {
    "z-test": "[self defined] Run all tests!",
    "z-chinese-mirror": "[self defined] How to set chinese composer mirror",
    "z-docker-mirror": "[self defined] How to set chinese docker mirror",
    "z-example": "[self defined] init example",
    "z-travis": "[self defined] How to encrypt travis file",
    "z-encrypt": "[self defined] How to encrypt file by openssl"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "18.03-dev"
    }
  }
}
